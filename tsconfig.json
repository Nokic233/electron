{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "allowJs": true,
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "typeRoots": ["node_modules/@types"]
    },
    "include": ["node_modules/vite/types/**.d.ts", "**.d.ts", "src/**/*"]
}
